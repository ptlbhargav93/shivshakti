.col-xs-12.col-sm-6.col-md-4.col-10
  .rxBox
    .rxHeader
      .rxTitle= customer.b_name
    / .rxContent
    /   .row.row5
    /     .col-xs-12
    /       .rxDesc
    /         %span= "Address"
    /         .rxValue= customer.b_address.present? ? customer.b_address: '-'
    /     .col-xs-12.col-sm-6
    /       .rxDesc
    /         %span= "City"
    /         .rxValue= customer.b_city.present? ? customer.b_city : '-'      
    /     .col-xs-12.col-sm-6
    /       .rxDesc
    /         %span= "State"
    /         .rxValue= customer.b_state.present? ? customer.b_state : '-'
    /     .col-xs-12.col-sm-6
    /       .rxDesc
    /         %span= "Country"
    /         .rxValue= customer.b_country.present? ? customer.b_country : '-'
    /     .col-xs-12.col-sm-6
    /       .rxDesc
    /         %span= "GST Number"
    /         .rxValue= customer.b_gst_number.present? ? customer.b_gst_number : '-'
    .rxBottom
      .row
        .col-xs-12.col-sm-7.pb5
          %a.rxNextBtn{:href => customer_path(customer) }
            = t("customer.open_card")
            %i.fa.fa-angle-double-right
        .col-xs-12.col-sm-5.pb5
          %a.rxNextBtn{:href => customer_bills_path(:bill_customer => customer.id) }
            = "Bills"
            %i.fa.fa-angle-double-right        